<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dimension_8"
        android:paddingVertical="@dimen/dimension_12">

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:elevation="@dimen/dimension_8"
            android:background="@drawable/background_rounded_20"
            android:backgroundTint="@color/match_detail_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimension_28">

            <TextView
                android:id="@+id/description"
                style="@style/MatchDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/dimension_64"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Idea description" />

            <TextView
                style="@style/Subtitle2"
                android:layout_marginTop="@dimen/dimension_48"
                app:layout_constraintTop_toBottomOf="@id/description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/partner_response" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/yes_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dimension_6"
                android:background="@drawable/background_rounded_20"
                android:backgroundTint="@color/match_detail_blue_background"
                android:paddingHorizontal="@dimen/dimension_16"
                android:paddingVertical="@dimen/dimension_8">

                <ImageView
                    android:id="@+id/yes_illustration"
                    android:src="@drawable/drawable_button_yes"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/yes_content"
                    android:layout_marginStart="@dimen/dimension_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/yes_illustration"
                    app:layout_constraintBottom_toBottomOf="@id/yes_illustration"
                    app:layout_constraintStart_toEndOf="@id/yes_illustration">

                    <TextView
                        android:id="@+id/yes_title"
                        android:text="Yes"
                        style="@style/H3Title"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="This idea is ðŸ”¥"
                        android:id="@+id/yes_description"
                        style="@style/Subtitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimension_6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/yes_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toBottomOf="@id/label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dimension_6"
                android:id="@+id/maybe_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_rounded_20"
                android:backgroundTint="@color/match_detail_blue_background"
                android:paddingHorizontal="@dimen/dimension_16"
                android:paddingVertical="@dimen/dimension_8">

                <ImageView
                    android:id="@+id/maybe_illustration"
                    android:src="@drawable/drawable_maybe_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/maybe_content"
                    android:layout_marginStart="@dimen/dimension_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/maybe_illustration"
                    app:layout_constraintBottom_toBottomOf="@id/maybe_illustration"
                    app:layout_constraintStart_toEndOf="@id/maybe_illustration">

                    <TextView
                        android:id="@+id/maybe_title"
                        android:text="Maybe"
                        style="@style/H3Title"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="I could think about this..."
                        android:id="@+id/maybe_description"
                        style="@style/Subtitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimension_6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/maybe_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toBottomOf="@id/label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/no_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimension_6"
                android:background="@drawable/background_rounded_20"
                android:backgroundTint="@color/match_detail_blue_background"
                android:paddingHorizontal="@dimen/dimension_16"
                android:paddingVertical="@dimen/dimension_8">

                <ImageView
                    android:id="@+id/no_illustration"
                    android:src="@drawable/drawable_no_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/no_content"
                    android:layout_marginStart="@dimen/dimension_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/no_illustration"
                    app:layout_constraintBottom_toBottomOf="@id/no_illustration"
                    app:layout_constraintStart_toEndOf="@id/no_illustration">

                    <TextView
                        android:id="@+id/no_title"
                        android:text="No way"
                        style="@style/H3Title"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Not gonna happen."
                        android:id="@+id/no_description"
                        style="@style/Subtitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimension_6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/no_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
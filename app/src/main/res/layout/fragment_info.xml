<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/dimension_24">

        <TextView
            style="@style/H1Title"
            android:text="Rules of the game"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.LinearLayoutCompat
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintBottom_toTopOf="@id/back_button"
            android:orientation="vertical"
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimension_8"
                android:background="@drawable/background_rounded_20_ripple"
                android:backgroundTint="@color/blue_background"
                android:padding="@dimen/dimension_16">

                <ImageView
                    android:id="@+id/yes_illustration"
                    android:src="@drawable/drawable_button_yes"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/yes_content"
                    android:layout_marginStart="@dimen/dimension_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/yes_illustration"
                    app:layout_constraintBottom_toBottomOf="@id/yes_illustration"
                    app:layout_constraintStart_toEndOf="@id/yes_illustration">

                    <TextView
                        android:id="@+id/yes_title"
                        android:text="Yes"
                        style="@style/H3Title"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="This idea is ðŸ”¥"
                        android:id="@+id/yes_description"
                        style="@style/Subtitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimension_6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/yes_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimension_8"
                android:background="@drawable/background_rounded_20_ripple"
                android:backgroundTint="@color/blue_background"
                android:padding="@dimen/dimension_16">

                <ImageView
                    android:id="@+id/maybe_illustration"
                    android:src="@drawable/drawable_maybe_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/maybe_content"
                    android:layout_marginStart="@dimen/dimension_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/maybe_illustration"
                    app:layout_constraintBottom_toBottomOf="@id/maybe_illustration"
                    app:layout_constraintStart_toEndOf="@id/maybe_illustration">

                    <TextView
                        android:id="@+id/maybe_title"
                        android:text="Maybe"
                        style="@style/H3Title"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="I could think about this..."
                        android:id="@+id/maybe_description"
                        style="@style/Subtitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimension_6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/maybe_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimension_8"
                android:background="@drawable/background_rounded_20_ripple"
                android:backgroundTint="@color/blue_background"
                android:padding="@dimen/dimension_16">

                <ImageView
                    android:id="@+id/no_illustration"
                    android:src="@drawable/drawable_no_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/no_content"
                    android:layout_marginStart="@dimen/dimension_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/no_illustration"
                    app:layout_constraintBottom_toBottomOf="@id/no_illustration"
                    app:layout_constraintStart_toEndOf="@id/no_illustration">

                    <TextView
                        android:id="@+id/no_title"
                        android:text="No way"
                        style="@style/H3Title"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Not gonna happen."
                        android:id="@+id/no_description"
                        style="@style/Subtitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimension_6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/no_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <Button
            style="@style/Button.Highlight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimension_24"
            android:layout_marginTop="@dimen/dimension_24"
            android:text="Got it"
            android:id="@+id/back_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

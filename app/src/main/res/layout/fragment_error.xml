<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimension_16"
                android:background="@drawable/cloud_form"
                android:src="@drawable/ic_no_connection"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0" />

            <TextView
                style="@style/H1Title"
                android:id="@+id/title"
                android:layout_marginStart="@dimen/dimension_24"
                android:layout_marginTop="@dimen/dimension_32"
                android:layout_marginEnd="@dimen/dimension_24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ehm... Sorry..."
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image" />

            <TextView
                style="@style/H1Title"
                android:id="@+id/trouble"
                android:layout_marginStart="@dimen/dimension_24"
                android:layout_marginEnd="@dimen/dimension_24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="I'm having some trouble"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title" />

            <TextView
                android:id="@+id/label"
                style="@style/Body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension_20"
                android:layout_marginHorizontal="@dimen/dimension_16"
                android:gravity="center"
                android:text="Is everything ok with your connection? If you think so, please try again."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/trouble" />

            <Button
                style="@style/Button.Highlight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimension_24"
                android:layout_marginEnd="@dimen/dimension_24"
                android:layout_marginBottom="@dimen/dimension_24"
                android:text="Try again"
                android:id="@+id/try_again"
                android:layout_marginTop="@dimen/dimension_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>

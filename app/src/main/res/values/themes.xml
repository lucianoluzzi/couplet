<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Couplet" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorOnPrimary">@color/red_over</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="actionBarStyle">@style/Theme.Couplet.ActionBar</item>
    </style>

    <style name="Theme.Couplet.ActionBar" parent="@style/Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/background</item>
        <item name="elevation">0dp</item>
        <item name="displayOptions">showHome|useLogo</item>
    </style>

    <style name="SplashScreenTheme" parent = "Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="H1Title">
        <item name="android:textSize">35sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="H2Title">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="Label">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/grey_blue</item>
    </style>

    <style name="Body">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Body.Disabled">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/grey_blue</item>
    </style>

    <style name="Body.Highlight">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/musk_green</item>
    </style>
</resources>
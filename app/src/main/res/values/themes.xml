<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Couplet" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorOnPrimary">@color/red_over</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="actionBarStyle">@style/Theme.Couplet.ActionBar</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Couplet.ActionBar" parent="@style/Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/background</item>
        <item name="elevation">0dp</item>
        <item name="displayOptions">showHome|useLogo</item>
    </style>

    <style name="OverlayMatchTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/black_50</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Texts -->
    <style name="H1Title">
        <item name="android:textSize">35sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="H2Title">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="MatchDetail">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="H3Title">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="Match">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="Subtitle">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/dark_60</item>
    </style>

    <style name="Subtitle2">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="Label">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="ForgotPassword">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/italic</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Body">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/grey_blue</item>
    </style>

    <style name="Body.Disabled">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/grey_blue</item>
    </style>

    <style name="Body.Highlight">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/musk_green</item>
    </style>

    <!-- Buttons -->
    <style name="Button" />

    <style name="Button.Highlight" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/RoundCorners.16</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Body.Highlight</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="rippleColor">@color/red_over</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Button.Highlight.Icon" parent="Widget.MaterialComponents.Button.UnelevatedButton.Icon">
        <item name="iconPadding">20dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/RoundCorners.16</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Body.Highlight</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="rippleColor">@color/red_over</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/RoundCorners.16</item>
        <item name="android:backgroundTint">@color/outlined_button_color</item>
        <item name="android:textAppearance">@style/Body.Highlight</item>
        <item name="android:textColor">@color/musk_green</item>
        <item name="android:height">60dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="strokeColor">@color/blue_20</item>
        <item name="rippleColor">@color/outlined_button_ripple</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Button.Outlined.Icon" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="iconPadding">20dp</item>
        <item name="elevation">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/musk_green</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/RoundCorners.16</item>
        <item name="android:backgroundTint">@color/outlined_button_color</item>
        <item name="android:textColor">@color/musk_green</item>
        <item name="android:textAppearance">@style/Body.Highlight</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="strokeColor">@color/blue_20</item>
        <item name="rippleColor">@color/outlined_button_ripple</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Button.Outlined.Transparent" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/RoundCorners.16</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textAppearance">@style/Body.Highlight</item>
        <item name="android:textColor">@color/blue_accent</item>
        <item name="android:height">60dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="strokeColor">@color/blue_accent</item>
        <item name="rippleColor">@color/outlined_button_ripple</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Button.Outlined.Transparent.Inline" parent="Button.Outlined.Transparent">
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:insetTop">10dp</item>
        <item name="android:insetBottom">10dp</item>
        <item name="android:textSize">13sp</item>
        <item name="rippleColor">@color/outlined_button_ripple</item>
    </style>

    <style name="TextField" />

    <style name="TextInputLayout.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:height">60dp</item>
        <item name="errorIconDrawable">@drawable/ic_error</item>
        <item name="boxStrokeColor">@color/grey_blue_50</item>
        <item name="boxStrokeErrorColor">@color/red_over</item>
        <item name="shapeAppearance">@style/RoundCorners.8</item>
        <item name="boxBackgroundColor">@color/text_input_background</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInputLayout.Outlined.Dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:height">60dp</item>
        <item name="errorIconDrawable">@drawable/ic_error</item>
        <item name="boxStrokeColor">@color/grey_blue_50</item>
        <item name="boxStrokeErrorColor">@color/red_over</item>
        <item name="shapeAppearance">@style/RoundCorners.8</item>
        <item name="boxBackgroundColor">@color/text_input_background</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColorHint">@color/grey_blue</item>
        <item name="android:textColor">@color/musk_green</item>
        <item name="android:textAppearance">@style/Body</item>
    </style>

    <style name="RoundCorners" />

    <style name="RoundCorners.8">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="RoundCorners.16">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Button.No" parent="">
        <item name="elevation">@dimen/dimension_8</item>
        <item name="shapeAppearance">@style/CircleImageView</item>
    </style>

    <style name="Button.Yes" parent="">
        <item name="elevation">@dimen/dimension_8</item>
        <item name="shapeAppearance">@style/CircleImageView</item>
    </style>

    <style name="Button.Maybe" parent="">
        <item name="elevation">@dimen/dimension_8</item>
        <item name="shapeAppearance">@style/CircleImageView</item>
    </style>
</resources>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Couplet" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorOnPrimary">@color/red_over</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="actionBarStyle">@style/Theme.Couplet.ActionBar</item>
    </style>

    <style name="Theme.Couplet.ActionBar" parent="@style/Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/background</item>
        <item name="elevation">0dp</item>
        <item name="displayOptions">showHome|useLogo</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Texts -->
    <style name="H1Title">
        <item name="android:textSize">35sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="H2Title">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="Label">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Body">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/grey_blue</item>
    </style>

    <style name="Body.Disabled">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/grey_blue</item>
    </style>

    <style name="Body.Highlight">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/musk_green</item>
    </style>

    <!-- Buttons -->
    <style name="Button" />

    <style name="Button.Highlight" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/RoundCorners</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Body.Highlight</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="Button.Highlight.Icon" parent="Widget.MaterialComponents.Button.Icon">
        <item name="iconPadding">20dp</item>
        <item name="elevation">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/RoundCorners</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Body.Highlight</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/RoundCorners</item>
        <item name="android:backgroundTint">@color/blue_15</item>
        <item name="android:textAppearance">@style/Body.Highlight</item>
        <item name="android:textColor">@color/musk_green</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="strokeColor">@color/blue_20</item>
    </style>

    <style name="Button.Outlined.Icon" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="iconPadding">20dp</item>
        <item name="elevation">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/musk_green</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/RoundCorners</item>
        <item name="android:backgroundTint">@color/blue_15</item>
        <item name="android:textColor">@color/musk_green</item>
        <item name="android:textAppearance">@style/Body.Highlight</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="strokeColor">@color/blue_20</item>
    </style>

    <style name="RoundCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


</resources>
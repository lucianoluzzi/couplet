<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Couplet" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorOnPrimary">@color/red_over</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="actionBarStyle">@style/Theme.Couplet.ActionBar</item>
        <item name="actionBarTheme">@style/Theme.Couplet.ActionBar.Theme</item>
    </style>

    <style name="Theme.Couplet.ActionBar" parent="@style/Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/background</item>
        <item name="elevation">0dp</item>
        <item name="displayOptions">showHome|useLogo</item>
    </style>

    <style name="Theme.Couplet.ActionBar.Theme" parent="@style/Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/background</item>
        <item name="elevation">0dp</item>
        <item name="displayOptions">showHome|useLogo</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@drawable/background_splash_night</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Title">
        <item name="android:textSize">35sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="H2Title">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="Label">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/grey_blue</item>
    </style>

    <style name="Body">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Body.Disabled">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/grey_blue</item>
    </style>

    <style name="Body.Highlight">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/musk_green</item>
    </style>

    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/RoundCorners.16</item>
        <item name="android:backgroundTint">@color/outlined_button_ripple</item>
        <item name="android:textAppearance">@style/Body.Highlight</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="strokeColor">@color/grey_blue_light</item> // todo: this color is wrong, awaiting designers response
        <item name="rippleColor">@color/outlined_button_ripple</item> // todo: this color is wrong, awaiting designers response
    </style>

    <style name="Button.Outlined.Icon" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="iconPadding">20dp</item>
        <item name="elevation">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/RoundCorners.16</item>
        <item name="android:backgroundTint">@color/outlined_button_ripple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Body.Highlight</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="strokeColor">@color/grey_blue_light</item> // todo: this color is wrong, awaiting designers response
        <item name="rippleColor">@color/outlined_button_ripple</item> // todo: this color is wrong, awaiting designers response
    </style>

    <style name="TextInputLayout.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorIconDrawable">@drawable/ic_error</item>
        <item name="boxStrokeColor">@color/grey_blue_50</item>
        <item name="boxStrokeErrorColor">@color/red_over</item>
        <item name="android:textColorHint">@color/grey_blue_50</item>
        <item name="hintTextColor">@color/white_50</item>
        <item name="hintTextAppearance">@style/Body</item>
        <item name="shapeAppearance">@style/RoundCorners.8</item>
        <item name="boxBackgroundColor">@color/text_input_background</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Body.Highlight</item>
    </style>
</resources>